<UserControl x:Class="ALSIE_ProjectModule.Controls.Toolbox.ToolBoxItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ALSIE_ProjectModule.Controls.Toolbox"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Button Name="ToolBoxButton" Height="40" Style="{StaticResource UmlToogleButtonStyle}" Tag="Unselected" Click="ToolBoxButton_Click">
        <Button.Content>
            <StackPanel Margin="10 0 10 0">
                <TextBlock Name="ToolBoxText" FontSize="16" />
            </StackPanel>
        </Button.Content>
    </Button>
</UserControl>

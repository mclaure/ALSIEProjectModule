<UserControl x:Class="ALSIE_ProjectModule.Controls.Designer.UmlGeneralizationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ALSIE_ProjectModule.Controls.Designer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Name="GeneralizationCanvas" Width="20">
        <Polygon Points="0,0 8,5, 0,10" Stroke="CornflowerBlue" Fill="CornflowerBlue" RenderTransformOrigin="0.535,0.901" Canvas.Left="6" >
            <Polygon.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform X="4.096" Y="-4.726"/>
                </TransformGroup>
            </Polygon.RenderTransform>
        </Polygon>
        <Line Name="GeneralizationLine" X1="10" Y1="10" X2="10" Y2="150" Stroke="CornflowerBlue" StrokeThickness="1"/>
    </Canvas>
</UserControl>
